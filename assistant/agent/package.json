{
  "name": "jira-agent",
  "version": "1.0.0",
  "description": "AI-powered Jira assistant using LangChain and jira.js",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "prettier": "^3.8.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@langchain/core": "^1.1.17",
    "@langchain/openai": "^1.2.3",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jira.js": "^5.2.2",
    "langchain": "^1.2.13",
    "zod": "^3.25.76"
  }
}
